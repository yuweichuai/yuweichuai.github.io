<div class="news">
  {% if site.media != blank %}
    {% assign media_size = site.media | size %}
    <div
      class="table-responsive"
      {% if site.media.scrollable and media_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign media = site.media | reverse %}
        {% if site.media.limit %}
          {% assign media_limit = site.media.limit %}
        {% else %}
          {% assign media_limit = media_size %}
        {% endif %}
        {% for item in media limit: media_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No media coverage so far...</p>
  {% endif %}
</div>